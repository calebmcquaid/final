<section class="competition-section">
  <div class="competition-hero-div">
    <h2>Select your competition parameters</h2>
  </div>
  <div class="competition-div">
    <%= form_for @competition do |f| %>
      <%= flash[:errors] %>
      Steps: <%= f.check_box :steps, checked: true  %><br />
      Calories: <%= f.check_box :calories, checked: true %><br />
      Miles: <%= f.check_box :miles, checked: true %><br />
      Start Date: <%= f.date_field :start_date %><br />
      End Date: <%= f.date_field :end_date %><br />
      Competitor: <% User.where.not(id: current_user.id).each do |user| %>
        <%= check_box_tag "user_ids[]", user.id %>
        <%= label_tag "#{user.first_name} #{user.last_name}" %>
        <br />
        <% end %>
      <%= submit_tag "Call Action" %>
    <% end %>
  </div>
</section>
