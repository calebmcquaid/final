<section>
  <h2>Select your competition parameters</h2>
  <div>
    <%= form_for @competition, url: {action: 'create', controller: 'competitions'} do |f| %>
      Steps: <%= f.text_field :steps %><br />
      Calories: <%= f.text_field :calories %><br />
      Miles: <%= f.text_field :miles %><br />
      Length of Competition: <%= f.select :time, [ '1 Day', '3 Days', '5 Days', '7 Days' ], :prompt => 'Select One' %><br />
      <%= f.submit %>
    <% end %>
  </div>
</section>
